<!doctype html>
<html lang="en-US">
  <head>
    <title>
      <% if @page %>
        <%= @page.capitalize %> |
      <% end %>
      Tyler Guillen is a <%= SITEMAP[@role]["name"] %>
    </title>
    <meta name="description" content="<%= SITEMAP[@role]["description"] %>">
    <meta charset="UTF-8" />

    <link rel="stylesheet" type="text/css" href="/reset.css">
    <link rel="stylesheet" href="//brick.a.ssl.fastly.net/Lora:400,400i/EB+Garamond:400,400i:f">
    <link rel="stylesheet" type="text/css" href="/main.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="/application.js"></script>
    <%= yield_content :custom_styles_and_scripts %>
  </head>
  <body>
    <div id="wrap" class="clearfix">
      <header class="clearfix">
        <h1>
          <a href="<%= "/#{@role}" %>">
            <span class="name">Tyler Guillen</span>
            <span class="italic">is a</span>
            <span class="job"><%= SITEMAP[@role]["name"] %>.</span>
          </a>
        </h1>
        <nav>
          <ul>
            <% SITEMAP[@role]["pages"].each do |page_hash| %>
              <li>
                <% if child_pages? page_hash %>
                  <a href="#" class="nav-parent"><%= page_hash['name'] %></a>
                  <ul class="sub-menu">
                    <% page_hash['pages'].each do |subpage_hash| %>
                      <li>
                        <a href="/<%= @role %>/<%= page_hash['path'] %>/<%= subpage_hash['path'] %>">
                         <%= subpage_hash['name'] %>
                        </a>
                      </li>
                    <% end %>
                  </ul>
                <% else %>
                  <a href="<%= page_path page_hash %>"><%= page_hash['name'] %></a>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </header>
      <main class="clearfix">
        <%= yield %>
      </main>
    </div>
    <footer>
      <nav>
        <ul>
          <% SITEMAP.each do |role, hash| %>
            <li>
              <a href="/<%= role %>">
                <%= hash["name"] %>
              </a>
            </li>
          <% end %>
        </ul>
      </nav>
    </footer>
  </body>
</html>
